mixin header(header)
	div.row(style="margin-top:40px")
		div.col-5
			div(style="padding:10px;background:url(/images/rishonim/green-corner.svg) no-repeat left top")
				div(style="padding:20px;background:white")
					img(src=header.img width="360px" style="border:1px solid black")
		div.col-7
			div(style="padding-right:20px")
				h3.text-uppercase=header.title
				h1.caligraphic(style="color:brown;font-size:3em")=header.caligraph
				for row in header.body.split('\n')
					div=row


	div
		if block
			block
		div(style="position: relative;top: -269px;left:724px;height:0")
			div#rotated-bg(style="position: absolute; width: 300px; height: 300px; background: url(/images/rishonim/green-corner.svg) 0 0 no-repeat;transform: rotate(180deg)")
